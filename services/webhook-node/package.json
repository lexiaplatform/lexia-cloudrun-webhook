{
  "name": "lexia_whatsapp_webhook",
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "webhook:dev": "NODE_ENV=development tsx watch server/webhook.ts",
    "webhook:build": "esbuild server/webhook.ts --platform=node --bundle --format=cjs --outdir=dist --external:drizzle-orm --external:drizzle-orm/mysql-core --external:drizzle-orm/mysql2",
    "webhook:start": "NODE_ENV=production node dist/webhook.js",
    "dev": "pnpm run webhook:dev",
    "build": "pnpm run webhook:build",
    "start": "pnpm run webhook:start"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "express": "^4.19.2",
    "mysql2": "^3.17.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.1",
    "typescript": "^5.9.3"
  }
}
